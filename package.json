  "build": {
    "appId": "com.prefeitura.saofrancisco.chamados",
    "productName": "Chamados Internos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "main.js",
      "package.json",
      "public/icon-*.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "public/icon-512x512.png"
    },
    "linux": {
      "icon": "public/icon-512x512.png"
    }
